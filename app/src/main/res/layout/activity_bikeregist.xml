<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEBBF"
    tools:context=".BikeregistActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="MY PAGE"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="360dp" />

    <Button
        android:id="@+id/btn_profile"
        android:layout_width="50dp"
        android:layout_height="150dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="sans-serif-light"
        android:text="프로필"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_bikeregist"
        android:layout_width="50dp"
        android:layout_height="150dp"
        android:layout_marginEnd="1dp"
        android:text="내\n자전거\n등록"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/btn_profile" />

    <Button
        android:id="@+id/btn_cardregist"
        android:layout_width="50dp"
        android:layout_height="150dp"
        android:backgroundTint="#FFFFFF"
        android:text="카드등록"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/btn_bikeregist" />

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="690dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:text="자전거 현 상태 사진"
                android:textColor="#000000"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image_bike_front"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:background="#B1ACAC"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <ImageButton
                android:id="@+id/btn_front_plus"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/image_bike_front"
                app:layout_constraintEnd_toEndOf="@+id/image_bike_front"
                app:layout_constraintStart_toStartOf="@+id/image_bike_front"
                app:layout_constraintTop_toTopOf="@+id/image_bike_front"
                app:srcCompat="@drawable/btn_bikeregist_photoplus" />

            <ImageView
                android:id="@+id/image_bike_wheel"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:background="#B1ACAC"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_bike_front" />

            <ImageButton
                android:id="@+id/btn_wheel_plus"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/image_bike_wheel"
                app:layout_constraintEnd_toEndOf="@+id/image_bike_wheel"
                app:layout_constraintStart_toStartOf="@+id/image_bike_wheel"
                app:layout_constraintTop_toTopOf="@+id/image_bike_wheel"
                app:srcCompat="@drawable/btn_bikeregist_photoplus" />

            <ImageView
                android:id="@+id/image_bike_break"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:background="#B1ACAC"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/image_bike_wheel"
                app:layout_constraintTop_toBottomOf="@+id/image_bike_front" />

            <ImageButton
                android:id="@+id/btn_break_plus"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/image_bike_wheel"
                app:layout_constraintEnd_toEndOf="@+id/image_bike_break"
                app:layout_constraintStart_toStartOf="@+id/image_bike_break"
                app:layout_constraintTop_toTopOf="@+id/image_bike_wheel"
                app:srcCompat="@drawable/btn_bikeregist_photoplus" />

            <ImageView
                android:id="@+id/image_bike_chain"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:background="#B1ACAC"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_bike_wheel" />

            <ImageButton
                android:id="@+id/btn_chain_plus"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/image_bike_chain"
                app:layout_constraintEnd_toEndOf="@+id/image_bike_wheel"
                app:layout_constraintStart_toStartOf="@+id/image_bike_wheel"
                app:layout_constraintTop_toTopOf="@+id/image_bike_chain"
                app:srcCompat="@drawable/btn_bikeregist_photoplus" />

            <ImageView
                android:id="@+id/image_bike_ex"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:background="#B1ACAC"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/image_bike_chain"
                app:layout_constraintTop_toBottomOf="@+id/image_bike_wheel" />

            <ImageButton
                android:id="@+id/btn_ex_plus"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/image_bike_chain"
                app:layout_constraintEnd_toEndOf="@+id/image_bike_ex"
                app:layout_constraintStart_toStartOf="@+id/image_bike_ex"
                app:layout_constraintTop_toTopOf="@+id/image_bike_chain"
                app:srcCompat="@drawable/btn_bikeregist_photoplus" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="30dp"
                android:text="자전거 모델 명"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_bike_chain" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="180dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/text_bikeregist_edit"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/image_bike_ex" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>