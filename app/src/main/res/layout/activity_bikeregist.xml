<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".BikeregistActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:text="내 자전거"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:text="My Bycicle"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="909dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_bike_front"
                android:layout_width="230dp"
                android:layout_height="200dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="80dp"
                android:background="#B1ACAC"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_front_plus"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/image_bike_front"
                app:layout_constraintEnd_toEndOf="@+id/image_bike_front"
                app:layout_constraintStart_toStartOf="@+id/image_bike_front"
                app:layout_constraintTop_toTopOf="@+id/image_bike_front"
                app:srcCompat="@drawable/btn_bikeregist_photoplus" />

            <ImageView
                android:id="@+id/image_bike_wheel"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="80dp"
                android:background="#B1ACAC"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/image_bike_front"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_wheel_plus"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/image_bike_wheel"
                app:layout_constraintEnd_toEndOf="@+id/image_bike_wheel"
                app:layout_constraintStart_toStartOf="@+id/image_bike_wheel"
                app:layout_constraintTop_toTopOf="@+id/image_bike_wheel"
                app:srcCompat="@drawable/btn_bikeregist_photoplus" />

            <ImageView
                android:id="@+id/image_bike_break"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:background="#B1ACAC"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/image_bike_front"
                app:layout_constraintTop_toBottomOf="@+id/btn_wheel_plus" />

            <ImageButton
                android:id="@+id/btn_break_plus"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/image_bike_break"
                app:layout_constraintEnd_toEndOf="@+id/image_bike_break"
                app:layout_constraintStart_toStartOf="@+id/image_bike_break"
                app:layout_constraintTop_toTopOf="@+id/image_bike_break"
                app:srcCompat="@drawable/btn_bikeregist_photoplus" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>