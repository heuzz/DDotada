<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".BikeregistActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:text="내 자전거"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:text="My Bycicle"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="909dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bikeregist_bike_photo1"
                android:layout_width="230dp"
                android:layout_height="200dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="80dp"
                android:background="#B1ACAC"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/bikeregist_bike_photo2"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="80dp"
                android:background="#B1ACAC"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/bikeregist_bike_photo1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/bikeregist_bike_photo3"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="#B1ACAC"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/bikeregist_bike_photo1"
                app:layout_constraintTop_toBottomOf="@+id/bikeregist_bike_photo2" />

            <ImageView
                android:id="@+id/bikeregist_bike"
                android:layout_width="94dp"
                android:layout_height="70dp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/btn_bikeregist_photoplus" />

            <ImageButton
                android:id="@+id/btn_bikeregist_bike_change"
                android:layout_width="86dp"
                android:layout_height="73dp"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/bikeregist_bike"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/btn_bikeregist_photoplus" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="320dp"
                android:text="모델명"
                android:textColor="#737070"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="32dp"
                android:text="종류"
                android:textColor="#737070"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bikeregist_model_box" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="192dp"
                android:layout_marginTop="32dp"
                android:text="사용자 키"
                android:textColor="#737070"
                app:layout_constraintStart_toEndOf="@+id/textView25"
                app:layout_constraintTop_toBottomOf="@+id/bikeregist_time_box" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="172dp"
                android:layout_marginTop="320dp"
                android:text="구매시기"
                android:textColor="#737070"
                app:layout_constraintStart_toEndOf="@+id/textView23"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/bikeregist_model_box"
                android:layout_width="123dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView23"
                app:srcCompat="@drawable/accept_receive_notifications" />

            <ImageView
                android:id="@+id/bikeregist_handle_box"
                android:layout_width="280dp"
                android:layout_height="32dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@+id/textView29"
                app:layout_constraintTop_toBottomOf="@+id/textView33"
                app:srcCompat="@drawable/accept_receive_notifications" />

            <ImageView
                android:id="@+id/bikeregist_break_box"
                android:layout_width="280dp"
                android:layout_height="32dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@+id/textView28"
                app:layout_constraintTop_toBottomOf="@+id/bikeregist_handle_box"
                app:srcCompat="@drawable/accept_receive_notifications" />

            <ImageView
                android:id="@+id/bikeregist_frame_box"
                android:layout_width="280dp"
                android:layout_height="32dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/textView30"
                app:layout_constraintTop_toBottomOf="@+id/bikeregist_break_box"
                app:srcCompat="@drawable/accept_receive_notifications" />

            <ImageView
                android:id="@+id/bikeregist_pedal_box"
                android:layout_width="280dp"
                android:layout_height="32dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toEndOf="@+id/textView31"
                app:layout_constraintTop_toBottomOf="@+id/bikeregist_frame_box"
                app:srcCompat="@drawable/accept_receive_notifications" />

            <ImageView
                android:id="@+id/bikeregist_time_box"
                android:layout_width="123dp"
                android:layout_height="24dp"
                android:layout_marginStart="92dp"
                android:layout_marginTop="1dp"
                app:layout_constraintStart_toEndOf="@+id/bikeregist_model_box"
                app:layout_constraintTop_toBottomOf="@+id/textView24"
                app:srcCompat="@drawable/accept_receive_notifications" />

            <ImageView
                android:id="@+id/bikeregist_kind_box"
                android:layout_width="123dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView25"
                app:srcCompat="@drawable/accept_receive_notifications" />

            <ImageView
                android:id="@+id/bikeregist_height_box"
                android:layout_width="123dp"
                android:layout_height="24dp"
                android:layout_marginStart="92dp"
                app:layout_constraintStart_toEndOf="@+id/bikeregist_kind_box"
                app:layout_constraintTop_toBottomOf="@+id/textView26"
                app:srcCompat="@drawable/accept_receive_notifications" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp"
                android:text="자전거 상태"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bikeregist_kind_box" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="62dp"
                android:layout_height="32dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="20dp"
                android:text="브레이크"
                android:textColor="#737070"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView29" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="62dp"
                android:layout_height="32dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="24dp"
                android:text="핸들"
                android:textColor="#737070"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView27" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="47dp"
                android:layout_height="19dp"
                android:layout_marginStart="212dp"
                android:layout_marginTop="60dp"
                android:text="핸들"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bikeregist_height_box" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="47dp"
                android:layout_height="19dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="60dp"
                android:text="핸들"
                app:layout_constraintStart_toEndOf="@+id/textView32"
                app:layout_constraintTop_toBottomOf="@+id/bikeregist_height_box" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="47dp"
                android:layout_height="19dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="64dp"
                android:text="핸들"
                app:layout_constraintStart_toEndOf="@+id/textView33"
                app:layout_constraintTop_toBottomOf="@+id/bikeregist_height_box" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="62dp"
                android:layout_height="32dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="20dp"
                android:text="프레임"
                android:textColor="#737070"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView28" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="63dp"
                android:layout_height="32dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="20dp"
                android:text="페달"
                android:textColor="#737070"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView30" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/btn_bikeregist_change"
        android:layout_width="63dp"
        android:layout_height="32dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/accept_receive_notifications" />

</androidx.constraintlayout.widget.ConstraintLayout>