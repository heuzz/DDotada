<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background1"
    tools:context=".LoginActivity">


    <EditText
        android:id="@+id/login_input_pw"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="138dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_intput_id" />

    <EditText
        android:id="@+id/login_intput_id"
        android:layout_width="220dp"
        android:layout_height="34dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/login_stay_login"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="30dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/login_btn_findid"
        app:layout_constraintTop_toBottomOf="@+id/login_input_pw"
        app:srcCompat="@drawable/login_stay_login" />

    <ImageButton
        android:id="@+id/login_btn_findid"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="3dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/login_btn_findpw"
        app:layout_constraintTop_toBottomOf="@+id/login_input_pw"
        app:srcCompat="@drawable/login_btn_findid" />

    <ImageButton
        android:id="@+id/login_btn_findpw"
        android:layout_width="63dp"
        android:layout_height="35dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="62dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_input_pw"
        app:srcCompat="@drawable/login_btn_findpw" />

    <ImageView
        android:id="@+id/login_signupbox"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/login_btn_login"
        app:layout_constraintStart_toEndOf="@+id/login_loginbox"
        app:layout_constraintTop_toTopOf="@+id/login_btn_login"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/login_loginbox" />

    <ImageView
        android:id="@+id/login_loginbox"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_btn_findid"
        app:srcCompat="@drawable/login_loginbox" />

    <ImageButton
        android:id="@+id/login_btn_login"
        android:layout_width="77dp"
        android:layout_height="31dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/login_loginbox"
        app:layout_constraintEnd_toEndOf="@+id/login_loginbox"
        app:layout_constraintStart_toStartOf="@+id/login_loginbox"
        app:layout_constraintTop_toTopOf="@+id/login_loginbox"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/login_btn_login" />

    <ImageButton
        android:id="@+id/login_btn_signup"
        android:layout_width="77dp"
        android:layout_height="31dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/login_loginbox"
        app:layout_constraintEnd_toEndOf="@+id/login_signupbox"
        app:layout_constraintStart_toStartOf="@+id/login_signupbox"
        app:layout_constraintTop_toTopOf="@+id/login_loginbox"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/login_btn_signup" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="3dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/login_stay_login"
        app:layout_constraintEnd_toStartOf="@+id/login_stay_login"
        app:layout_constraintTop_toTopOf="@+id/login_stay_login"
        app:srcCompat="@drawable/checkbox" />

</androidx.constraintlayout.widget.ConstraintLayout>